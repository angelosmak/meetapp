<p style="color: green"><%= notice %></p>

<div class="main-container">
  <h1 class="navbar-text">Events and meetups near you</h1>
  <div class="map-container">
    <div 
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <%# searchfield %>

  <div class="beachcards-container">
    <%# Display of each Beach instance in a card with a photo and a title and address underneath %>
    <% if @events.present? %>
      <% @events.each do |event| %>
            <h2><%= event.title %></h2>
                <h3 id="shadowed" class="card-text secondary-text"><%= event.address %></h3>

                <div class="row ">
                  <div class="col">

                  <div class="col">
                    <i class="fa-solid fa-temperature-full" style="color: #ffffff;"></i>
                    <h3 id="shadowed" class="secondary-text" data-event-weather-target="temperature"></h3>
                  </div>
                  <div class="col">
                    <i class="fa-regular fa-compass" style="color: #ffffff;"></i>
                    <h3 id="shadowed"class="secondary-text" data-event-weather-target="Winddirection"></h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
